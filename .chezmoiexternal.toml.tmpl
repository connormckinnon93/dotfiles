[".local/share/zap"]
    type = "git-repo"
    url = "https://github.com/zap-zsh/zap.git"
    refreshPeriod = "168h"
    [".local/share/zap".clone]
        args = ["--branch", "v{{ .pinned_versions.zap }}", "--single-branch", "--depth", "1"]

# Claude Code plugin marketplaces (generated from claude_marketplaces in packages.yaml)
{{ range $name, $marketplace := .claude_marketplaces -}}
[".claude/plugins/marketplaces/{{ $name }}"]
    type = "git-repo"
    url = "https://github.com/{{ $marketplace.repo }}.git"
    refreshPeriod = "168h"
{{ if hasKey $marketplace "version" -}}
    [".claude/plugins/marketplaces/{{ $name }}".clone]
        args = ["--branch", "{{ $marketplace.version }}", "--single-branch"]
{{ end }}
{{ end -}}
