{{- if eq .chezmoi.os "darwin" -}}
#!/bin/bash
# mise config hash: {{ include "dot_config/mise/config.toml" | sha256sum }}

# Install Chromium for agent-browser after mise installs the CLI.
# Use "mise exec" because chezmoi scripts run without mise activation in PATH.
if mise which agent-browser &> /dev/null; then
    echo "Installing Chromium for agent-browser..."
    mise exec -- agent-browser install
else
    echo "agent-browser not installed by mise, skipping Chromium install"
    echo "Run 'mise install' then 'mise exec -- agent-browser install' manually"
fi

{{ end -}}
